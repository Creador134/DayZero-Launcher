<Window x:Class="Dotjosh.DayZCommander.App.Ui.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:ServerList="clr-namespace:Dotjosh.DayZCommander.App.Ui.ServerList"
		xmlns:Friends="clr-namespace:Dotjosh.DayZCommander.App.Ui.Friends"
		xmlns:Core="clr-namespace:Dotjosh.DayZCommander.App.Core" xmlns:Ui="clr-namespace:Dotjosh.DayZCommander.App.Ui"
		xmlns:Favorites="clr-namespace:Dotjosh.DayZCommander.App.Ui.Favorites"
		xmlns:Recent="clr-namespace:Dotjosh.DayZCommander.App.Ui.Recent" Title="DayZero Launcher" 
		Height="470" 
		Width="870"
		MouseLeftButtonDown="MainWindow_OnMouseLeftButtonDown"
		MouseDoubleClick="MainWindow_OnMouseDoubleClick"
		Style="{StaticResource MainWindowStyle}"
		>
	<Border Background="#222222"
			BorderBrush="#BBBBBB"
			x:Name="VisualRoot"
			BorderThickness="1">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition />
			</Grid.RowDefinitions>

			<Ui:SettingsView DataContext="{Binding SettingsViewModel}"
							 Grid.RowSpan="5"
							 Width="590"
							 HorizontalAlignment="Right"
							 Canvas.ZIndex="1001"
								 Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityCollapsedConverter}, FallbackValue=Hidden}"/>

			<Ui:UpdatesView DataContext="{Binding UpdatesViewModel}"
							 Grid.RowSpan="5"
							 Width="500"
							 HorizontalAlignment="Right"
							 Canvas.ZIndex="1000"
								 Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityCollapsedConverter}, FallbackValue=Hidden}"/>




			<Rectangle Fill="#444444"
					Grid.Row="1"
					IsHitTestVisible="True"
					Grid.RowSpan="4"
					Grid.ColumnSpan="2"/>

			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition />
				</Grid.ColumnDefinitions>

                <Image Source="../Assets/Images/dayzero_logo.png"
					   Width="200"
					   IsHitTestVisible="False"
					   Margin="30 10 0 10"/>

				<Grid Grid.Column="1">
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"/>
						<RowDefinition/>
					</Grid.RowDefinitions>

					<StackPanel HorizontalAlignment="Right"
									Margin="0 10 20 0"
								Grid.Row="0"
									Orientation="Horizontal">



						<Button
								Margin="12 0 0 0"
								Style="{StaticResource MetroTextButtonStyle}"
								Click="MinimizeClick" >
							<Button.Template>
								<ControlTemplate>
									<Border Background="#222"
												IsHitTestVisible="True">
										<Canvas Width="11"
													Height="11">
											<Line Stroke="{TemplateBinding Foreground}" 
													  Width="11" 
													  StrokeThickness="2" Canvas.Top="10"
													  X1="1" X2="11"/>
										</Canvas>
									</Border>
								</ControlTemplate>
							</Button.Template>
						</Button>

						<Button
								Margin="12 0 0 0"
								Style="{StaticResource MetroTextButtonStyle}"
								Click="ToggleMaxamimizeClick" >
							<Button.Template>
								<ControlTemplate>
									<Border Background="#222"
												IsHitTestVisible="True">
										<Canvas Width="11"
													Height="11">
											<Line Stroke="{TemplateBinding Foreground}" 
													  Width="11" 
													  StrokeThickness="2" Canvas.Top="2"
													  X1="1" X2="11"/>
											<Rectangle Stroke="{TemplateBinding Foreground}"
														   StrokeThickness="1"
													   Width="11"
													   Height="11">

											</Rectangle>
										</Canvas>
									</Border>
								</ControlTemplate>
							</Button.Template>
						</Button>

						<Button
								Margin="12 0 0 0"
								Style="{StaticResource MetroTextButtonStyle}"
								Click="CloseButtonClick" >
							<Button.Template>
								<ControlTemplate>
									<Border Background="#222"
												IsHitTestVisible="True">
										<Path Data="F1M54.0573,47.8776L38.1771,31.9974 54.0547,16.1198C55.7604,14.4141 55.7604,11.6511 54.0573,9.94531 52.3516,8.23962 49.5859,8.23962 47.8802,9.94531L32.0026,25.8229 16.1224,9.94531C14.4167,8.23962 11.6511,8.23962 9.94794,9.94531 8.24219,11.6511 8.24219,14.4141 9.94794,16.1198L25.8255,32 9.94794,47.8776C8.24219,49.5834 8.24219,52.3477 9.94794,54.0534 11.6511,55.7572 14.4167,55.7585 16.1224,54.0534L32.0026,38.1745 47.8802,54.0534C49.5859,55.7585 52.3516,55.7572 54.0573,54.0534 55.7604,52.3477 55.763,49.5834 54.0573,47.8776z" Stretch="Uniform"
